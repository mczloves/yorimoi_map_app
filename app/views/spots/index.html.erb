<div class="texts-wrapper">
  <div class="contents-title">
    <h2 class="text-center font-weight-bold pege-title">聖地リスト</h2>
    <div class="row">
      <% @spots.each do |spot| %>
        <div class="col-12 col-md-6 col-lg-4">
          <%= link_to spot_path(spot) do %>
            <div class="card bg-light mb-3">
              <% if spot.image? %>
                  <p><%= image_tag spot.image.url, class: "img-fluid card-img-top" %></p>
              <% end %>
              <div class="card-body">
                <h5 class="card-title text-dark"><%= spot.name %></h5>
          <% end %>
                <p class="card-title small"><i class="fa-solid fa-location-dot"></i> <%= spot.address %></p>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
 <%= paginate @spots %>